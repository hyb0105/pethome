<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.PetHome.mapper.PetMapper">

    <resultMap id="PetResultMap" type="com.example.PetHome.entity.Pet">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="breed" column="breed"/>
        <result property="city" column="city"/>
        <result property="gender" column="gender"/>
        <result property="age" column="age"/>
        <result property="description" column="description"/>
        <result property="healthStatus" column="health_status"/>
        <result property="sterilization" column="sterilization"/>
        <result property="vaccination" column="vaccination"/>
        <result property="photoUrl" column="photo_url"/>
        <result property="status" column="status"/>
        <result property="ownerId" column="owner_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insertPet" parameterType="com.example.PetHome.entity.Pet" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO pet (name, `type`, breed,city, gender, age, description, health_status, sterilization, vaccination, photo_url, `status`, owner_id)
        VALUES (#{name}, #{type}, #{breed}, #{city}, #{gender}, #{age}, #{description}, #{healthStatus}, #{sterilization}, #{vaccination}, #{photoUrl}, #{status}, #{ownerId})
    </insert>

    <select id="findPetById" resultMap="PetResultMap">
        SELECT * FROM pet WHERE id = #{id}
    </select>

    <select id="findAllPets" resultMap="PetResultMap">
        SELECT * FROM pet
        <where>
            <if test="!isAdmin">
                status = 0
            </if>
            <if test="status != null">
                AND `status` = #{status}
            </if>
            <if test="type != null and type != ''">
                AND `type` LIKE CONCAT('%', #{type}, '%')
            </if>
            <if test="breed != null and breed != ''">
                AND breed LIKE CONCAT('%', #{breed}, '%')
            </if>
            <if test="city != null and city != ''">
                AND city LIKE CONCAT('%', #{city}, '%')
            </if>
            <if test="gender != null">
                AND gender = #{gender}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <update id="updatePet" parameterType="com.example.PetHome.entity.Pet">
        UPDATE pet
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="type != null">`type` = #{type},</if>
            <if test="breed != null">breed = #{breed},</if>
            <if test="city != null">city = #{city},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="age != null">age = #{age},</if>
            <if test="description != null">description = #{description},</if>
            <if test="healthStatus != null">health_status = #{healthStatus},</if>
            <if test="sterilization != null">sterilization = #{sterilization},</if>
            <if test="vaccination != null">vaccination = #{vaccination},</if>
            <if test="photoUrl != null">photo_url = #{photoUrl},</if>
            <if test="status != null">`status` = #{status},</if>
            <if test="ownerId != null">owner_id = #{ownerId},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deletePetById">
        DELETE FROM pet WHERE id = #{id}
    </delete>
</mapper>